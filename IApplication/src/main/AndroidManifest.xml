    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name=".IEasyToolsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".act.welcomeActivity.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/app_welcome_theme_style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".act.mainActivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />
        <activity
            android:name=".act.addActivity.AddEntryActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />
        <activity
            android:name=".act.helpActivity.HelpActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <activity
            android:name=".act.aboutActivity.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <activity
            android:name=".act.feedbackActivity.FeedbackActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <activity
            android:name=".act.seachActivity.SeachActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <activity
            android:name=".act.settingActivity.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <activity
            android:name=".act.fileManagerActivity.FileManagerActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <activity
            android:name=".act.otherDatabaseActivity.OtherDBActivity"
            android:theme="@style/AppTheme.NoActionBar.Animation" />

        <service android:name=".act.myServer.MyServer" />

    </application>

</manifest>
